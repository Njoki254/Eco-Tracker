
{{#partial "content"}}

    <div class="container">
        <div class="row">
            <div class="col-md-7">
                <h2 id="mara">Maasai Mara Reserve</h2>
                <img src="/images/maranorth.jpg" alt="Mara North Map" class="image-fluid map ml-5" id="map">
            </div>
            <div class="col-md-5">
                <h2 class="text-center"><strong>Record a Sighting</strong></h2>

                <form action="/sighting/new" method="post">
                    <div class="form-group">
                        <label class="active " for="animal-id">Animal Id</label>
                        <input id="animal-id" name="animal-id" type="text" class="form-control">
                    </div>

                    <div class="form-group">
                        <label class="active" for="species">Species</label>
                        <input id="species" name="species" type="text" class="form-control">
                    </div>
                    <div class="form-group">
                        <label class="active" for="location">Sight Location</label>
                        <input id="location" name="location" type="text" class="form-control">
                    </div>
                    <div class="form-group">
                        <label class="active" for="age">Age</label>
                        <input id="age" name="age" type="number" class="form-control">
                    </div>
                    <div class="form-group">
                        <label class="active" for="health">Health Status</label>
                        <input id="health" name="health" type="text" class="form-control">
                    </div>
                    <div class="container" #listofheroes>
                        <h3><strong>Select Endanger or Unendangered.</strong></h3>
                        <p><a href='/endangered' >Click here to view the endangered animals sighted so far</a></p>
                        <div class= "row">
                            <div class="col-md-4">
                                <input type="radio" id="1" name="life-status" values="endangered">
                                <label for="endangered"> Endangered</label><br>
                                <input type="radio" id="2" name="life-status" value="unendangered">
                                <label for="unendangered">Unendangered</label><br>

                            </div>




                        </div>

                        <button type="submit" class=" btn btn-success" >Save sighting!</button>
                    </div>
                </form>
            </div>
        </div>
    </div>


    <div class="container">

    </div>



{{/partial}}

